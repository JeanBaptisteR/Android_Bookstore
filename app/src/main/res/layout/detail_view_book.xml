<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_detail_book_cover"
                android:layout_marginTop="8dp"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:src="@drawable/ic_launcher"/>

            <TextView
                android:id="@+id/tv_detail_book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="32sp"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Harry Potter à l'école des sorciers"/>

            <TextView
                android:id="@+id/tv_detail_book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginTop="8dp"
                android:text="5€"/>

            <TextView
                android:id="@+id/tv_detail_book_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="978-2-86889-006-1"
                android:layout_marginTop="8dp"
                android:paddingBottom="5dp"/>

            <View
                android:background="@android:color/darker_gray"
                android:layout_width="280dp"
                android:layout_height="1px"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_detail_book_synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="L'histoire d'Harry Potter commence ..."
                android:padding="5dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>